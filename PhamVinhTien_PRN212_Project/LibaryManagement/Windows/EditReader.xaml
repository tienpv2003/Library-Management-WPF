<Window x:Class="LibaryManagement.Windows.EditReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibaryManagement.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Edit" Height="300" Width="320">

    <Grid Background="White">
        <Canvas Margin="10">
            <Label Content="Student ID:" Canvas.Top="5"/>
            <TextBox x:Name="txtStudentID" Width="200" Canvas.Left="80" Canvas.Top="8" IsEnabled="False"/>

            <Label Content="Student Name:" Canvas.Top="39" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="txtStudentName" Width="200" Canvas.Left="80" Canvas.Top="43" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Label Content="Phone:" Canvas.Top="70" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="txtPhone" Width="200" Canvas.Left="80" Canvas.Top="78" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Label Content="Dob:" Canvas.Top="112" RenderTransformOrigin="0.606,1.119"/>
            <DatePicker Name="dpDob" Width="200" Canvas.Left="80" Canvas.Top="114" RenderTransformOrigin="0.492,1.543" HorizontalAlignment="Center" VerticalAlignment="Top"/>

            <Label Content="Address:" Canvas.Top="155"/>
            <TextBox x:Name="txtAddress" Width="200" Canvas.Left="80" Canvas.Top="158"/>

            <Button Content="SAVE" FontSize="15" FontWeight="DemiBold" Width="80" Height="30" Canvas.Top="200" Canvas.Left="34" Click="btn_Save" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="CANCEL" FontSize="15" FontWeight="DemiBold" Width="80" Height="30" Canvas.Top="200" Canvas.Left="180" Click="btn_Cancel" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>
