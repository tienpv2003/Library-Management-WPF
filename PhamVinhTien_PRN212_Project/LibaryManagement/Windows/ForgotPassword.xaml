<Window x:Class="LibaryManagement.Windows.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibaryManagement.Windows"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen"
         Title="Forgot Password" Height="200" Width="400">
    <Grid>
        <Label Content="SEND OTP BY EMAIL" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Margin="0,19,0,0" VerticalAlignment="Top"/>
        <Label Content="Enter your email:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="55,61,0,0"/>
        <TextBox x:Name="EmailTextBox" Width="300" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="55,92,0,0"/>
        <Button Content="Send OTP" Width="100" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="155,134,0,0" Click="SendOtpButton_Click"/>

    </Grid>
</Window>
