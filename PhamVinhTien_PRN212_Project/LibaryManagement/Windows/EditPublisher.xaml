<Window x:Class="LibaryManagement.Windows.EditPublisher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibaryManagement.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Edit Publisher" Height="250" Width="400">

    <Grid Background="White">
        <Canvas Margin="10">
            <Label Content="Publisher ID:" Canvas.Top="5"/>
            <TextBox x:Name="txtPublisherID" Width="250" Canvas.Left="100" Canvas.Top="8" IsEnabled="False"/>

            <Label Content="Publisher Name:" Canvas.Top="50"/>
            <TextBox x:Name="txtPublisherName" Width="250" Canvas.Left="100" Canvas.Top="53"/>

            <StackPanel Orientation="Horizontal" Canvas.Top="100" Canvas.Left="100">
                <Button Content="SAVE" Width="75" Margin="5,0" Click="btn_Save_Click"/>
                <Button Content="CANCEL" Width="75" Margin="5,0" Click="btn_Cancel_Click"/>
            </StackPanel>
        </Canvas>
    </Grid>
</Window>
